<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/automover/unraid-automover-2025.07.23-noarch-1.txz
cp /usr/local/emhttp/plugins/automover/helpers/default_settings.cfg /boot/config/plugins/automover/settings.cfg

SETTINGS="/boot/config/plugins/automover/settings.cfg"
CRON_FILE="/boot/config/plugins/automover/automover.cron"
AUTOMOVER="/usr/local/emhttp/plugins/automover/helpers/automover.sh"

echo "Reading configuration..."
if [ -e "$SETTINGS" ]; then
    source "$SETTINGS"
fi

# ✅ Check autorun toggle
if [[ "$AUTORUN" == "no" ]]; then
  echo "[INFO] Cron not started: autorun disabled in settings.cfg"
  # cleanup old versions
rm -f $(ls /boot/config/plugins/automover/unraid-automover-*.txz 2>/dev/null | grep -v '2025.07.23')
  echo ""
echo "----------------------------------------------------"
echo " automover has been installed."
echo " Version: 2025.07.23"
echo "----------------------------------------------------"
echo ""
  exit 0
fi

# ✅ Extract interval
INTERVAL=$(grep interval "$SETTINGS" | cut -d '"' -f2)

# ✅ Validate interval
if [[ -z "$INTERVAL" || "$INTERVAL" -lt 1 || "$INTERVAL" -gt 60 ]]; then
  echo "[ERROR] Invalid interval. Must be between 1 and 60."
  exit 1
fi

# ✅ Write cron schedule
echo "*/$INTERVAL * * * * $AUTOMOVER &> /dev/null 2>&1" > "$CRON_FILE"

# ✅ Reload Unraid cron
update_cron

echo "[INFO] Cron schedule applied: every $INTERVAL minute(s)"

# cleanup old versions
rm -f $(ls /boot/config/plugins/automover/unraid-automover-*.txz 2>/dev/null | grep -v '2025.07.23')

echo ""
echo "----------------------------------------------------"
echo " automover has been installed."
echo " Version: 2025.07.23"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-automover

rm -rf /usr/local/emhttp/plugins/automover
rm -rf /boot/config/plugins/automover
]]>
</INLINE>
</FILE>

